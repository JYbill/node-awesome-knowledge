{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "stripInternal": true,
    "skipLibCheck": true,
    "pretty": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./typings",
      "./node_modules/@types",
    ],
    "outDir": "dist",
  },
  // 开发环境、生产环境
  // "exclude": [
  //   "dist",
  //   "node_modules",
  //   "test"
  // ],
  // 测试环境
  "exclude": [
    "dist",
    "node_modules",
  ],
}